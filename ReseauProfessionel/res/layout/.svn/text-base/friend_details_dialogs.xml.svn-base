         android:layout_width="200dp" 
		 android:layout_height="30dp" >
		 
       	<TextView 
	         android:id="@+id/LabelNom"
		     android:layout_width="wrap_content" 
		     android:layout_height="wrap_content" 
		     android:text="Nom      :" />
       	
       	<TextView 
